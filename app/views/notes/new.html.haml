.theme__container
  .row
    .theme__column--small
      %h2= t('views.notes.new.page_title')
      = simple_form_for @note, url: notes_path,
          defaults: { input_html: { class: 'form-control' } } do |f|

        .form-group
          = f.input :title

        .form-group
          = f.input :content, input_html: { rows: 10 }

        .form-actions
          = f.button :submit, t('views.notes.new.submit_link'), class: 'btn btn-primary'


  
